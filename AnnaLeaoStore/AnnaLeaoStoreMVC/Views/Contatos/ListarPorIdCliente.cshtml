@model List<AnnaLeaoStore.Model.ContatosMOD>
    <form id="popupForm" action="/Contatos/Salvar" method="post" novalidate="novalidate">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="alert-success"><label>Contatos</label></div>
                            <br class="b-r-lg" />
                            <hr />
                            <table class="table table-bordered table-striped table-hover table-responsive dt-responsive">
                                <thead>
                                    <tr>
                                        <th class="text-center col-sm-2">Tipo de Contato</th>
                                        <th class="text-center col-sm-2">Descrição</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                    var index = 0;
                                    foreach (var contato in Model)
                                    {
                                    <tr>
                                        <td>
                                            <input type="hidden" name="[@index].ID" id="[@index].ID" value="@contato.ID" />
                                            <input type="hidden" name="[@index].IDPessoa" id="[@index].IDPessoa" value="@contato.IDPessoa" />
                                            @contato.TipoContato
                                        </td>
                                        <td class="text-right">
                                            <input type="text" class="text-right" name="[@index].Descricao" id="[@index].Descricao" />
                                        </td>
                                    </tr>
                                    index++;
                                    }
                                    }
                                </tbody>
                            </table>
                            <div class="submit">
                                <button type="submit" class="btn  btn-primary"><span class="glyphicon glyphicon-floppy-saved"></span>Gravar</button>
                                <input type="button" name="Sair" value="Sair" id="Sair" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
