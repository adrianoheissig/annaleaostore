                                }
                            }
                        });
                    }
                }],
                open: function(event) {
                    $('.ui-dialog-buttonpane').find('button:contains("Sair")').addClass('btn btn-danger');
                    $('.ui-dialog-buttonpane').find('button:contains("Salvar")').addClass('btn btn-primary');
                }

            });

        $dialog.dialog('open');
}

</script>
}