var fornecedores = null;
$.getJSON('/SIRS/PessoaFj/ListarIdNome', function(resposta) {
        fornecedores = resposta;
});


// Chama o popup de edição/inserção
function OpenPopup(pageUrl) {
        var $pageContent = $('<div/>');
        $pageContent.load(pageUrl, function() {

            //Limpar a select list para carregar os novos fornecedores, porque senao limpar, poderá duplicar os registros na select.
            $('.listadefornecedores').empty();

            //Monta a select com os fornecedores que foram previamente carregados.
            $.each(fornecedores, function(key, val) {
                if ($('#IdPessoaFjExistente').val() == key) {
                    $('.listadefornecedores').append('<option value="' + key + '" selected>' + val + '</option>');
                } else {
                    $('.listadefornecedores').append('<option value="' + key + '">' + val + '</option>');
                }
            })
        });

        var $dialog = $('<div class="popupWindow modal" ></div>')
            .html($pageContent)
            .dialog({
                draggable: false,
                autoOpen: false,
                resizable: false,
                model: true,
                modal: true,
                title: 'Cadastro de Studio',
                height: 600,
                width: 650,
                close: function() {
                    $dialog.dialog('destroy').remove();
                },
                buttons: [{
                    "text": "Sair",
                    "click": function() {
                        $(this).dialog("close");
                    }
                },
                {
                    "text": "Salvar",
                    "click": function() {
                        var url = $('#popupForm')[0].action;
                        $.ajax({
                            type: "POST",
                            url: url,
