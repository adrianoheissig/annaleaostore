@model AnnaLeaoStoreMVC.ViewModels.ProdutosViewModel

<div class="col-lg-12">
    <div class="widget lazur-bg p-xl">
        <h2>
            @{ @Model.Descricao}

        </h2>
        <ul class="list-unstyled m-t-md">
            <li>
                <span class="fa fa-home m-r-xs"></span>
                <label>Refer.Id:</label>
                @{ @Model.ReferId }
            </li>
            <li>
                <span class="fa fa-home m-r-xs"></span>
                <label>Cor:</label>
                @{ @Model.Cor }
            </li>
            <li>
                <span class="fa fa-home m-r-xs"></span>
                <label>Fornecedor:</label>
                @{ @Model.Pessoas.ID } - @{ @Model.Pessoas.Nome}
            </li>
            <li>
                <span class="fa fa-home m-r-xs"></span>
                <label>Grade:</label>
                @{ @Model.Grades.ID } - @{ @Model.Grades.Descricao}
            </li>
            <li>
                <span class="fa fa-pencil m-r-xs"></span>
                <label>Situação:</label>
                @{ @Model.DescSituacao}
            </li>
            <li>
                <span class="fa fa-home m-r-xs"></span>
                <label>Observação:</label>
                @{ @Model.Observacao }
            </li>
            <li>
                <span class="fa fa-home m-r-xs"></span>
                <label>Link Para o Produto:</label>
                @{ @Model.LinkProduto }
            </li>

        </ul>

        <table class="table table-striped dt-responsive nowrap " data-page-size="15" id="tbEstoque">
            <thead>
                <tr>
                    @{ foreach (var item in Model.NomeGrade)
                        {
                            <th>@item</th>
                        }}
                </tr>
                <tr>
                    @{ foreach (var item in Model.QtdeTam)
                        {
                            <td>@item</td>
                        }}
                </tr>
            </thead>
        </table>

    </div>
</div>
